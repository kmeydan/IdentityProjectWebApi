@using IdentityProject.Model;
@model UserLists
@{
	ViewData["Title"] = "Users";
	Layout = "~/_Layout.cshtml";
}

<h1>Kullanıcılar</h1>
<h1>@(ViewBag.Message as string)</h1>
<div class="container mt-5">
	<div class="col-lg-12 justify-content-between grid-margin stretch-card">

		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Kullanıcı Sayısı {@Model.Users.Count} </h4>
				<div class="table-responsive text-center">
					<table class="table table-striped table-responsive-lg">
						<thead>
							<tr>
								<th class="col-1">
									E-Posta
								</th>
								<th class="col-2">
									Kullanıcı Adı
								</th>
								<th class="col-3">
									Telefon Numarası
								</th>
								<th class="col-2">
									Düzenleme
								</th>




							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Users)
							{
								<tr>

									<td>
										<p>@item.Email</p>
									</td>
									<td>
										<p>@item.UserName</p>
									</td>
									<td>
										<p>@item.PhoneNumber</p>
									</td>
									<td>

										<a type="submit" asp-action="Detail" asp-controller="Account" asp-route-id="@item.Id" class="btn btn-info btn-sm">
											<i class="fas fa-pencil-alt"></i>
											Düzenle
										</a>
										<a type="submit" asp-action="UserCreateRole" asp-controller="Account" asp-route-id="@item.Id" class="btn btn-info btn-sm">
											<i class="fa-solid fa-user"></i>
											Rol Atama
										</a>

									</td>


								</tr>
							}

						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
</div>
