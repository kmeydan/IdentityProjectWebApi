@using IdentityProjectWebApi.Model;
@model UserViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/_Layout.cshtml";
}




<div class="container-scroller">
	<div class="container-fluid page-body-wrapper full-page-wrapper">
		<div class="content-wrapper d-flex align-items-center auth px-0">
			<div class="row w-100 mx-0">
				<div class="col-lg-4 mx-auto">
					<div class="auth-form-light text-left py-5 px-4 px-sm-5">
						<div class="brand-logo">
							<h2>Admin</h2>
						</div>
						<h6 class="fw-light">Giriş Yap</h6>
						<form class="pt-3" asp-action="Login" method="post" asp-controller="Home">
							<div asp-validation-summary="All"></div>
							<div class="form-group">
								<label asp-for="EMail"></label>
								<input class="form-control form-control-lg" id="exampleInputEmail1" asp-for="EMail" placeholder="Email">
								<span asp-validation-for="EMail"></span>
							</div>
							<div class="form-group">
								<label asp-for="Sifre"></label>
								<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password" asp-for="Sifre">
								<span asp-validation-for="Sifre"></span>
							</div>
							<div class="my-2 d-flex justify-content-between align-items-center">
								<div class="form-check mx-4">
									<label></label>
									<input type="checkbox" class="form-check-input" asp-for="RememberMe"> Beni Hatırla
								</div>
								<a href="#" class="auth-link text-black">Şifremi Unuttum</a>
							</div>
							<div class="mt-3">
								<button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-controller="Home" asp-action="Login">Giriş Yap</button>
							</div>

						</form>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>





